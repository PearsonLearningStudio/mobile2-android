<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout
	android:id="@+id/top_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/secondary_gradient_background">
	<Spinner
		android:id="@+id/course_dropdown"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:prompt="@string/choose_a_course"
		android:layout_alignParentTop="true" 
		android:layout_toLeftOf="@+id/reload_button" />
	<Button
		android:id="@id/reload_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text=" R "
		android:layout_alignParentTop="true" 
		android:layout_alignParentRight="true" />
	<TextView
		android:id="@+id/last_updated_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/reload_button" 
		android:text="@string/last_updated_label"
		style="@style/TextAppearance.SubInverse" />
	
	<TextView
		android:id="@+id/last_updated_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/reload_button" 
		android:layout_toRightOf="@id/last_updated_label" 
		android:text="@string/never"
		style="@style/TextAppearance.SubInverse" />
</RelativeLayout>

	
<ListView
	android:id="@android:id/list"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_below="@id/top_view" />

<TextView
	android:id="@android:id/empty"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:text="@string/no_items"
	android:layout_below="@id/top_view"
	android:visibility="invisible" />
		
</RelativeLayout>
