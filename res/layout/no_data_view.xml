<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:background="@color/color_foreground">
	<ImageView      
		android:id="@+id/no_data_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/no_data_label"
		android:src="@drawable/ic_no_responses" />
	<TextView 
		android:id="@id/no_data_label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:src="@drawable/ic_no_responses" 
		style="@style/TextAppearance.TertiaryHeader" />
	<ImageView
		android:id="@+id/section_divider"
		android:layout_width="fill_parent"
		android:layout_height="1px"
		android:layout_marginTop="2dp"
		android:layout_alignParentBottom="true"
		android:background="@drawable/list_item_divider" />
		
</RelativeLayout>
