<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorLink">#FFEE0000</item>
    </style>
    
    <style name="TextAppearance.Header">
        <item name="android:textSize">20dp</item>
    	<item name="android:textColor">@color/color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.SecondaryHeader">
        <item name="android:textSize">18dp</item>
    	<item name="android:textColor">@color/color_secondary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.HeaderInverse">
        <item name="android:textSize">18sp</item>
    	<item name="android:textColor">@color/color_foreground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#CCC</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="TextAppearance.ListItemHeader">
    	<item name="android:textColor">@color/color_secondary</item>
        <item name="android:textStyle">bold</item>
    </style>
 
    <style name="TextAppearance.ListHeader">
    	<item name="android:textColor">@color/color_foreground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>
 
    <style name="TextAppearance.TransparentSpinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    	<item name="android:textColor">@color/color_foreground</item>
        <item name="android:shadowColor">@color/color_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="TextAppearance.InverseLabel">
        <item name="android:textSize">16sp</item>
    	<item name="android:textColor">@color/color_foreground</item>
        <item name="android:shadowColor">@color/color_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="TextAppearance.Inverse">
    	<item name="android:textColor">@color/color_foreground</item>
        <item name="android:shadowColor">@color/color_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>
    
    <style name="TextAppearance.Small">
        <item name="android:textSize">12sp</item>
    </style>
 
    <style name="TextAppearance.SubBold">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
 
    <style name="TextAppearance.Sub">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
    </style>
 
    <style name="TextAppearance.SubInverse">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/color_foreground</item>
    </style>
 
    <style name="TextAppearance.UnreadCount">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_foreground</item>
        <item name="android:background">@drawable/unread_background</item>
    </style>
 
    <style name="TextAppearance.Label">
        <item name="android:textSize">18sp</item>
    	<item name="android:textColor">@color/color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
 
    <style name="TextAppearance.Title">
        <item name="android:textStyle">bold</item>
    </style>
 
    <style name="TextAppearance.Button">
        <item name="android:textSize">18sp</item>
    	<item name="android:textColor">@color/color_foreground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>
 
    <style name="TextAppearance.EditText">
        <item name="android:textSize">14sp</item>
    </style>
 
    <style name="Widget" parent="android:Widget">
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>
    
    <style name="Widget.ButtonPrimary" parent="android:Widget.Button">
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:background">@drawable/button_background</item>
    	<item name="android:textColor">@color/color_foreground</item>
     </style>
     
    <style name="Widget.ButtonSecondary" parent="android:Widget.Button">
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="android:background">@drawable/secondary_button_background</item>
    	<item name="android:textColor">@color/color_foreground</item>
     </style>
     
   	<style name="Widget.CompoundButton" parent="android:Widget.CompoundButton"> 
        <item name="android:textAppearance">@style/TextAppearance.Label</item>
    </style> 
 
    <!-- style name="Widget.CompoundButton.CheckBox">
        <item name="android:background">@android:drawable/btn_check_label_background</item>
        <item name="android:button">@drawable/btn_check</item>
    </style--> 
 
    <style name="Widget.EditText" parent="android:Widget.EditText">
        <item name="android:textAppearance">@style/TextAppearance.EditText</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:gravity">top</item>
     </style>
     
    <style name="Widget.ListView" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_background</item>
        <item name="android:cacheColorHint">@color/color_foreground</item>
        <item name="android:divider">@drawable/list_item_divider</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>
    
    <style name="Widget.Spinner.Transparent" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/transparent_spinner_background</item>
        <item name="android:textAppearance">@style/TextAppearance.TransparentSpinner</item>
        <item name="android:clickable">true</item>
    </style>
    
</resources>